{
  "name": "studyground-mvp",
  "version": "1.0.0",
  "description": "스터디그라운드 MVP 시스템",
  "main": "server/server.js",
  "scripts": {
    "start": "NODE_ENV=production node server/server.js",
    "dev": "nodemon server/server.js",
    "build": "npm run build:client && npm run build:admin && npm run build:public",
    "build:client": "cd client && npm install && npm run build",
    "build:admin": "cd admin && npm install && npm run build",
    "build:public": "cd public-dashboard && npm install && npm run build",
    "postinstall": "npm run build",
    "init-db": "psql -U postgres -f database/schema.sql",
    "seed-db": "psql -U postgres -d studyground -f database/seed.sql"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "googleapis": "^128.0.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "socket.io": "^4.7.4",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "keywords": [
    "studyground",
    "attendance",
    "kiosk",
    "dashboard"
  ],
  "author": "StudyGround Team",
  "license": "MIT"
}
